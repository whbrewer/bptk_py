# External State Adapter Test Configuration
# Copy this file to .env and fill in your connection details

# PostgreSQL Test Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=bptk_test
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password

# Redis Test Database (Upstash or local)
REDIS_URL=rediss://your-upstash-redis-url
# Or for local Redis:
# REDIS_URL=redis://localhost:6379/0

# Test Configuration
# Set to 'true' to run tests that require external databases
ENABLE_POSTGRES_TESTS=false
ENABLE_REDIS_TESTS=false

# Test timeouts (in seconds)
TEST_TIMEOUT=30
CLEANUP_TIMEOUT=10